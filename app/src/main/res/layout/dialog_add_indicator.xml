<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_back1"
    android:backgroundTint="#00FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/card_back1"
        android:backgroundTint="#7142BC"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:background="@drawable/card_back2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="Укажите ваши\nпоказатели"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="При критических ситуациях\nэто может спасти вам жизнь"
                    android:textColor="#D6D6D6"
                    android:textSize="12sp" />
            </LinearLayout>

        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="11dp"
            android:text="@string/date"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialogIndicator_date_tv"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/edt_back"
            android:gravity="center_vertical"
            android:hint="@string/date"
            android:textColorHint="@color/gray"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#9C9C9C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialogIndicator_indicator1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="11dp"
            android:text="АД верх."
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dialogIndicator_indicator1_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/edt_back"
            android:hint="мм рт. ст."
            android:inputType="datetime"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialogIndicator_indicator2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="11dp"
            android:text="АД низжн."
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/dialogIndicator_indicator2_et"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/edt_back"
            android:hint="мм рт. ст."
            android:inputType="datetime"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/dialogIndicator_submit_btn"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="27dp"
            style="@style/base_button_style"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</FrameLayout>