<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="systemButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/style_btn</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#9A6ED6</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">#9A6ED6</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.App.Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog">
        <!-- (1)-->
        <item name="android:windowIsFloating">false</item>
        <!-- (2) -->
        <item name="android:windowBackground">@color/transparent</item>

        <item name="colorPrimary">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSurface">@color/purple_150</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_150</item>
        <!-- Customize your theme here. -->
        <!--<item name="switchStyle">@style/Widget.App.Switch</item>-->
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/purple_150</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/purple_150</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white
        </item>
    </style>

    <style name="base_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:background">@drawable/style_btn</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

</resources>